

/* builder4impress GUI styles */

.step:hover, .sprite:hover{
	background-color: rgba(255,250,100,0.5) !important
	opacity: 1 !important;
}


/* buttons */

buttonIcons = overview download movexy movez rotate scale
buttonIconClasses = ()

#builder-main-menu, #builder-control-menu
	for i in buttonIcons
		push(buttonIconClasses, '.bt-' + i)
	{join(', ', buttonIconClasses)}
		background-position: 5px center
		background-repeat: no-repeat
		padding-left: 31px
		background-size: 22px

	for iicon in buttonIcons
		a.bt-{iicon}
			background-image: url(icons/iicon.svg) !important

	a
		text-align: left
		padding: 5px 5px 5px 5px
		margin: 5px
		box-shadow: 0px 0px 2px #636363
		background-color: #333
		border-radius: 3px
		display: block
		position: relative
		color: white

	a:hover
		background-color: #555


/* main menu*/

#builder-main-menu
	padding:5px
	background-color: #222
	color: #fff
	width: auto
	text-align: center
	position: fixed
	top:0
	left:0


/* control menu */

#builder-control-menu
	padding:5px
	background: #222
	color: #fff
	width: 50px
	text-align: center
	position: absolute
	top: 170px
	left: 101px
	display: block

	a
		cursor: move
		height: 16px
		background-position: center center !important

	a:before
		content:'drag'
		font-size: 9px
		position: absolute
		top:0
		left:-8px
		transform: rotate(312deg)

